{
  "name": "subsonic-client",
  "version": "1.0.0",
  "description": "Subsonic music player client",
  "private": true,
  "type": "module",
  "main": "electron/main.js",
  "author": {
    "name": "Subsonic Client",
    "email": "mail@imaviso.com"
  },
  "license": "MIT",
  "scripts": {
    "dev": "vite --port 3000",
    "build": "vite build && tsc",
    "preview": "vite preview",
    "test": "vitest run",
    "format": "biome format",
    "lint": "biome lint",
    "check": "biome check",
    "electron": "electron .",
    "electron:dev": "concurrently -k \"bun run dev\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "bun run build && electron-builder",
    "electron:build:win": "bun run build && electron-builder --win",
    "electron:build:mac": "bun run build && electron-builder --mac",
    "electron:build:linux": "bun run build && electron-builder --linux"
  },
  "build": {
    "appId": "com.subsonic.client",
    "productName": "Subsonic Client",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "mac": {
      "target": ["dmg", "zip"],
      "icon": "public/logo512.png",
      "category": "public.app-category.music"
    },
    "win": {
      "target": ["nsis", "portable"],
      "icon": "public/logo512.png"
    },
    "linux": {
      "target": ["AppImage"],
      "icon": "public/logo512.png",
      "category": "Audio"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "@radix-ui/react-context-menu": "^2.2.16",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tailwindcss/vite": "^4.0.6",
    "@tanstack/react-devtools": "^0.7.0",
    "@tanstack/react-form": "^1.0.0",
    "@tanstack/react-query": "^5.66.5",
    "@tanstack/react-query-devtools": "^5.84.2",
    "@tanstack/react-router": "^1.132.0",
    "@tanstack/react-router-devtools": "^1.132.0",
    "@tanstack/router-plugin": "^1.132.0",
    "@valibot/valibot": "npm:@jsr/valibot__valibot",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "lucide-react": "^0.562.0",
    "next-themes": "^0.4.6",
    "node-mpv": "github:jeffvli/Node-MPV#32b4d64395289ad710c41d481d2707a7acfc228f",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.0.2",
    "tailwindcss": "^4.0.6",
    "tw-animate-css": "^1.3.6",
    "valibot": "^1.2.0",
    "vaul": "^1.1.2"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.4",
    "@tanstack/devtools-vite": "^0.3.11",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/react": "^16.2.0",
    "@types/node": "^22.10.2",
    "@types/react": "^19.2.0",
    "@types/react-dom": "^19.2.0",
    "@vitejs/plugin-react": "^5.0.4",
    "concurrently": "^9.2.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "jsdom": "^27.0.0",
    "typescript": "^5.7.2",
    "vite": "^7.1.7",
    "vitest": "^3.0.5",
    "wait-on": "^9.0.3",
    "web-vitals": "^5.1.0"
  }
}
